\setbeamerfont*{subtitle}{size=\normalsize,parent=title}

\setbeamerfont*{email}{parent=normal text, size=\footnotesize}

\setbeamerfont*{author}{parent=normal text, size=\small}
\setbeamerfont*{author in head/foot}{parent={structure}}
\setbeamerfont*{author in sidebar}{parent={tiny structure}}

\setbeamerfont*{institute}{parent=normal text, size=\scriptsize}
