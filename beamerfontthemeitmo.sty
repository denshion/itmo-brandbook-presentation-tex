\setbeamerfont*{structure}{parent = normal text}
\setbeamerfont*{tiny structure}{parent = normal text, size=\tiny}

\setbeamerfont*{title}{size=\LARGE, series=\bfseries, family={\fontspec{Muller}}}
\setbeamerfont*{title in head/foot}{parent=structure}
